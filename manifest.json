{

  "description": "EcoIndex ",
  "manifest_version": 2,
  "name": "ecoindex",
  "version": "1.3",
  "homepage_url": "https://github.com/didierfred/SimpleModifyHeaders",
  "icons": {
    "48": "icons/modify-48.png"
  },

  "permissions": [
    "activeTab","storage","history","webRequest", "webRequestBlocking", "<all_urls>" 
  ],
  
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/modify-32.png",
    "default_title": "EcoIndex",
    "default_popup": "popup/ecoindex.html"
  }

}
